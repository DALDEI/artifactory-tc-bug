<?xml version="1.0" encoding="UTF-8"?>
<meta-runner name="xmlsh">
  <description>Run xmlsh as a build step</description>
  <settings>
    <parameters>
      <param name="gradle-opts" value="" />
      <param name="gradle-release-opts" value="" />
      <param name="gradle-release-tasks" value="%gradle-tasks%" />
      <param name="gradle-tasks" value="clean build" />
      <param name="project" value="" spec="text validationMode='not_empty' display='hidden'" />
      <param name="release-build" value="dev" spec="checkbox description='Check if resolving and publishing to release' label='Release Build' uncheckedValue='dev' display='normal' checkedValue='release'" />
      <param name="system.artifactory-publish" value="true" spec="checkbox uncheckedValue='false' display='normal' checkedValue='true'" />
      <param name="system.artifactory.build.number" value="%system.build.number%" />
      <param name="system.artifactory.deploy.build.number" value="%system.build.number%" />
      <param name="system.artifactory.publish.artifacts" value="%system.artifactory-publish%" spec="text validationMode='not_empty' display='normal'" />
      <param name="system.artifactory.publish.buildInfo" value="%system.artifactory-publish%" spec="text validationMode='not_empty' display='hidden'" />
      <param name="system.buildInfo.build.number" value="%system.build.number%" />
      <param name="system.repo-publish" value="%system.repo-resolve%" spec="text validationMode='not_empty' display='normal'" />
      <param name="system.repo-resolve" value="libs-%release-build%" spec="select data_6='yum-release' data_5='yum-qa' display='normal' data_2='libs-snapshot' data_1='libs-release' data_4='yum-dev' data_3='yum-snapshot'" />
      <param name="repo-publish" value="libs-snapshot-bug" />
      <param name="repo-resolve" value="%repo-resolve-dev%" />
      <param name="repo-resolve-dev" value="libs-release" />
    </parameters>
    <build-runners>
      <runner name="echo build" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[echo id1 %sharedBuildNumber.id1%
echo id1.next %sharedBuildNumber.id1.next%]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner name="xmlsh" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[#!/bin/env /usr/local/bin/xmlsh
xversion
set]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <requirements />
  </settings>
</meta-runner>

